{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "express"
    ]
  },
  "include": [
    "src/**/*"
  ]
}